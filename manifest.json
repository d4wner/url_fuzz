{
    "manifest_version": 2,

    "name": "hack-http-headers",
    "description": "Check JSONP And Sqli",
    "version": "1.0",
    "homepage_url": "http://weibo.com/J1n9999",

    "permissions": [
        "tabs",
        "cookies",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],

    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "hack-http-headers"
    },
    "background": {
        "scripts": ["background.js"]
    }
}